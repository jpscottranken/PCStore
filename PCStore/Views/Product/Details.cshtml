@model Product

<h1>@Model.ProductName</h1>

<div class="thumbnail">
	<img src="@Model.ProductImageURL" alt="@Model.ProductName" />
	<div class="">
		<h3 class="">@Model.ProductPrice</h3>
		<h3><a href="#">@Model.ProductName</a></h3>
		<p>@Model.ProductDescription</p>
	</div>
	<div class="addToCart">
		<p class="button">
			<a class="btn btn-primary" 
				asp-controller="ShoppingCart" 
				asp-action="AddToShoppingCart" 
				asp-route-productId="@Model.ProductId">Add to Cart</a>
		</p>
	</div>
</div>

