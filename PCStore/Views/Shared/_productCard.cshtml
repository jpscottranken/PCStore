@model Product

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ProductImageThumbnailURL" alt="Product Image" />
        <div class="caption">
            <h3 class="pull-right">@Model.ProductPrice.ToString("c")</h3>
            <h4><a asp-controller="Product"
                    asp-action="Details"
                    asp-route-id="@Model.ProductId">
                    @Model.ProductName
                </a></h4>
                <p>@Model.ProductDescription</p>
        </div>
        <div class="button">
            <a class="btn btn-primary"
                asp-controller="ShoppingCart"
                asp-action="AddToShoppingCart"
                asp-route-productId="@Model.ProductId">
                Add to Cart
            </a>
        </div>
    </div>
</div>